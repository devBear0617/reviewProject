<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.review.dao.MemberDAO">
	
	<resultMap id="Member" type="MemberVO">
		<id property="member_id" column="member_id" />
		<result property="member_pw" column="member_pw" />
		<result property="member_name" column="member_name" />
	</resultMap>
	
	<resultMap id="uploadFile" type="UploadFielVO">
		<id property="file_num" column="file_num" />
		<result property="directoryname" column="directoryname" />
		<result property="file_name" column="file_name" />
		<result property="file_data" column="file_data" />
	</resultMap>	
	
	<!-- file -->
	<!-- <select id="getFile" resultMap="UploadFielVO">
		
	</select> -->
	<!-- <insert id="uploadFile" parameterType="UploadFileVO">
		INSERT INTO upload_file(file_name, file_data)
		VALUES (#{file_name}, #{file_data})
	</insert> -->
	
	<!-- 정보 수정 -->
	<update id="updateMember" parameterType="MemberVO">
		UPDATE member SET
			member_pw = #{member_pw}
		WHERE member_id = #{member_id}
	</update>
	
	<!-- 마이페이지 확인 -->
	<select id="MemberInfo" resultMap="Member">
		SELECT *
		FROM member
		WHERE member_id = #{member_id}
	</select>

	<!-- 가입 -->
	<insert id="joinMember" parameterType="MemberVO" >
		INSERT INTO member (member_id, member_pw, member_name)
		VALUES (#{member_id}, #{member_pw}, #{member_name})
	</insert>	
	
	<!-- 로그인 -->
	<select id="selectMember" parameterType="MemberVO" resultMap="Member">
		SELECT *
		FROM member
		WHERE member_id = #{member_id}
	</select>

</mapper>