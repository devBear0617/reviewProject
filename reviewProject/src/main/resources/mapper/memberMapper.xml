<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.review.dao.MemberDAO">
	
	<resultMap id="Member" type="MemberVO">
		<id property="member_id" column="member_id" />
		<result property="member_pw" column="member_pw" />
		<result property="member_name" column="member_name" />
		<result property="member_email" column="member_email" />
		<result property="member_pic" column="member_pic" />
	</resultMap>
	
	<!-- myLike -->
	<select id="myLike" parameterType="String" resultType="LikeItVO">
		SELECT *
		FROM likeit
		WHERE member_id = #{member_id}
		ORDER BY board_num DESC
		<!-- SELECT *
		FROM likeit L, board B
		WHERE L.board_num = B.board_num
		AND L.member_id = #{member_id}
		ORDER BY L.board_num DESC -->
	</select>
	
	<!-- myReply -->
	<select id="myReply" parameterType="String" resultType="ReplyVO">
		SELECT *
		FROM reply
		WHERE member_id = #{member_id}
		ORDER BY reply_num DESC
	</select>
	
	<!-- myBoard -->
	<select id="myBoard" parameterType="String" resultType="BoardVO">
		SELECT *
		FROM board
		WHERE member_id = #{member_id}
		ORDER BY board_date DESC
	</select>
	
	<!-- updateProfile -->
	<update id="updateProfile" parameterType="MemberVO">
		UPDATE member SET
			member_pic = #{member_pic}
		WHERE member_id = #{member_id}
	</update>
	
	<!-- 정보 수정 -->
	<update id="updateMember" parameterType="MemberVO">
		UPDATE member SET
			member_pw = #{member_pw}
		WHERE member_id = #{member_id}
	</update>
	
	<!-- 마이페이지 확인 -->
	<select id="MemberInfo" resultMap="Member">
		SELECT *
		FROM member
		WHERE member_id = #{member_id}
	</select>

	<!-- 가입 -->
	<insert id="joinMember" parameterType="MemberVO" >
		INSERT INTO member (member_id, member_pw, member_name, member_email)
		VALUES (#{member_id}, #{member_pw}, #{member_name}, #{member_email})
	</insert>	
	
	<!-- 로그인 -->
	<select id="selectMember" parameterType="MemberVO" resultMap="Member">
		SELECT *
		FROM member
		WHERE member_id = #{member_id}
	</select>

</mapper>